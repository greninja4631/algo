{
    /* ---------- 1. ヘッダ拡張子の言語関連付け ---------- */
    "files.associations": {
        "assert.h": "c",
        "stdlib.h": "c",
        "math.h": "c",
        "config.h": "c",
        "array": "c",
        "string": "c",
        "string_view": "c",
        "vector": "c",
        "main_practice_c": "c",
        "time.h": "c",
        "data_structures.h": "c",
        "stdio.h": "c",
        "string.h": "c",
        "history_system.h": "c",
        "stdarg.h": "c",
        "{}": "c"
    },

    /* ---------- 2. 自動保存設定 ---------- */
    "files.autoSave":       "afterDelay",
    "files.autoSaveDelay":  1000,

    /* ---------- 3. Makefile 専用インデントルール ---------- */
    "[makefile]": {
        "editor.insertSpaces":      false,
        "editor.detectIndentation": false,
        "editor.tabSize":           4
    },

    /* ---------- 4. IntelliSenseプリプロセッサ定義（TESTING有効化） ---------- */
    "C_Cpp.default.defines": [
        "TESTING"
    ]
}